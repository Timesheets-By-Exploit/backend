{
  "compilerOptions": {
    "target": "ES2021", 
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
